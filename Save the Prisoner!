#include<bits/stdc++.h>
using namespace std;
#define sf scanf
#define pf printf
#define pb push_back
#define i64 long long int
const double pi = 2*acos(0) ;
#define mx 10000001

int main()
{

    int n,m,s,t;
    cin>>t;
    while(t--)
    {
        cin>>n>>m>>s;
        m = (m+s)-1;
        if(m%n == 0) pf("%d\n",n);
        else pf("%d\n",m%n);
    }
return 0;
}


