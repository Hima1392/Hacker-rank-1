#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n,i,j,k;
    cin>>n;
    for(i=0,j=n-1;i<n;i++,j--)
    {
        for(k=0;k<j;k++)
        {
            cout<<" ";
        }
        for(k=0;k<=i;k++)
        {
            cout<<"#";
        }
        cout<<endl;
    }
    return 0;
}
