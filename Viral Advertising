#include<bits/stdc++.h>
using namespace std;
#define sf scanf
#define pf printf
#define pb push_back
#define i64 long long int
const double pi = 2*acos(0) ;
#define mx 10000001
int func(int i,int n)
{
    if(i==0) return 0;
    int sum = n/2;
    n = (n/2) *3;
    return sum + func(i-1,n);
}
int main()
{
    int n;
    cin>>n;
    cout<<func(n,5);
return 0;
}


